@using GCServices.ConsumerPortal.UI
@using GCServices.ConsumerPortal.UI.Models
@model Tuple<DemographicInfoViewModel, DemographicInfoViewModel>
@{
    ViewBag.Title = StringResources.AddressStandardization_cshtml_Execute_ADDRESS_STANDARDIZATION;
}

<div class="row">
    <div class="col-sm-12">
        <h1 class="right-title">@ViewBag.Title</h1>
        <div class="white-box">
            <div class="row padding-left-right-dynamic">
                <div class="col-xs-12">
                    <h3>@StringResources.AddressStandardization_cshtml_Execute_Standardized_Address</h3>
                </div>
                <div class="col-sm-6 col-xs-12">
                    <div class="col-sm-12">
                        <div class="col-xs-12">
                            <h4>@StringResources.AddressStandardization_cshtml_Execute_Standardized_Address</h4>
                        </div>
                        <div class="form-group form-horizontal">
                            @Html.LabelFor(m => m.Item2.AddressLine1, new { @class = "col-sm-4 control-label" })
                            <div class="col-sm-8">
                                <span class="form-text">@Html.DisplayFor(m => m.Item2.AddressLine1)</span>
                            </div>
                            @Html.LabelFor(m => m.Item2.AddressLine2, new { @class = "col-sm-4 control-label" })
                            <div class="col-sm-8">
                                <span class="form-text">@Html.DisplayFor(m => m.Item2.AddressLine2)</span>
                            </div>
                            @Html.LabelFor(m => m.Item2.Zipcode, new { @class = "col-sm-4 control-label" })
                            <div class="col-sm-8">
                                <span class="form-text">@Html.DisplayFor(m => m.Item2.Zipcode)</span>
                            </div>
                            @Html.LabelFor(m => m.Item2.City, new { @class = "col-sm-4 control-label" })
                            <div class="col-sm-8">
                                <span class="form-text">@Html.DisplayFor(m => m.Item2.City)</span>
                            </div>
                            @Html.LabelFor(m => m.Item2.State, new { @class = "col-sm-4 control-label" })
                            <div class="col-sm-8">
                                <span class="form-text">@Html.DisplayFor(m => m.Item2.State)</span>
                            </div>
                        </div>
                        @using (Html.BeginForm("AddressStandardization", "Home", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal margin-left-10", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                <div class="col-sm-6 margin-top-20 margin-bottom-20">
                                    <input name="standardizedInputButton" type="submit" value="@StringResources.AddressStandardization_cshtml_Execute_USE_STANDARDIZED_ADDRESS" class="btn btn-primary btn-ok" />
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <div class="col-sm-6 col-xs-12">
                    <div class="col-sm-12">
                        <div class="col-xs-12">
                            <h4>@StringResources.AddressStandardization_cshtml_Execute_Your_Input_Address</h4>
                        </div>
                        <div class="form-group form-horizontal">
                            @Html.LabelFor(m => m.Item1.AddressLine1, new { @class = "col-sm-4 control-label" })
                            <div class="col-sm-8">
                                <span class="form-text">@Html.DisplayFor(m => m.Item1.AddressLine1)</span>
                            </div>
                            @Html.LabelFor(m => m.Item1.AddressLine2, new { @class = "col-sm-4 control-label" })
                            <div class="col-sm-8">
                                <span class="form-text">@Html.DisplayFor(m => m.Item1.AddressLine2)</span>
                            </div>
                            @Html.LabelFor(m => m.Item1.Zipcode, new { @class = "col-sm-4 control-label" })
                            <div class="col-sm-8">
                                <span class="form-text">@Html.DisplayFor(m => m.Item1.Zipcode)</span>
                            </div>
                            @Html.LabelFor(m => m.Item1.City, new { @class = "col-sm-4 control-label" })
                            <div class="col-sm-8">
                                <span class="form-text">@Html.DisplayFor(m => m.Item1.City)</span>
                            </div>
                            @Html.LabelFor(m => m.Item1.State, new { @class = "col-sm-4 control-label" })
                            <div class="col-sm-8">
                                <span class="form-text">@Html.DisplayFor(m => m.Item1.State)</span>
                            </div>
                        </div>

                        @using (Html.BeginForm("AddressStandardization", "Home", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal margin-left-10", role = "form" }))
                        {
                            <div class="form-group">
                                @Html.AntiForgeryToken()
                                <div class="col-sm-6 margin-top-20 margin-bottom-20">
                                    <input name="myInputButton" type="submit" value="@StringResources.AddressStandardization_cshtml_Execute_USE_MY_ADDRESS" class="btn btn-primary btn-ok"/>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/App/UpdateProfile.js"></script>
}
