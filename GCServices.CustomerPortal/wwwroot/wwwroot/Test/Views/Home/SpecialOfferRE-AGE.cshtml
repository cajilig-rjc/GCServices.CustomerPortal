@model GCServices.ConsumerPortal.UI.Models.SpecialOfferProgramInfoViewModel

<!--Beginning of Special Offer C -->
<div class="special-offers-section">

    <div class="special-offers-banner">

        <div class="special-offers-title">@StringResources.SpecialOffers_Offer_C_Title</div>
        <div class="special-offers-btn">
            <button type="button" data-toggle="modal" data-target="#offerC" class="btn btn-light">@StringResources.SpecialOffers_Accept_Program</button>
        </div>

    </div>

    <div class="special-offers-terms">
        <p><b>@StringResources.SpecialOffers_Offer_C_1</b></p>
        <p>@StringResources.SpecialOffers_Offer_C_2</p>

        <p>
            <ul>
                <li>@StringResources.SpecialOffers_Offer_C_Eligibility_1 @Model.AccountMinimumDue.ToString("C").</li>
                <li>@StringResources.SpecialOffers_Offer_C_Eligibility_2 @Model.LumpSumPaymentDue.ToString("C").</li>
            </ul>
        </p>

        <p>@StringResources.SpecialOffers_Offer_C_3 @ViewBag.PhoneNumer.</p>
        <p><b>@StringResources.SpecialOffers_Offer_C_4</b></p>
        <p>@StringResources.SpecialOffers_Offer_C_5</p>


    </div>
</div>
<!--End of Special Offer C -->
<!-- Modal Offer C -->
<div class="modal fade" id="offerC" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>

            </div>
            <div class="modal-body">
                <p><b>@StringResources.SpecialOffers_Modal_Offer_C</b></p>
            </div>
            <div class="modal-footer">
                @using (Html.BeginForm("SpecialOffers", "Home", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form", id = "specialOfferBForm", name = "specialOfferBForm" }))
                {
                    @Html.AntiForgeryToken()
                    <input type="hidden" id="ProgramId" name="ProgramId" value="RE-AGE" />
                    <button type="button" class="btn btn-primary btn-ok button-width-large margin-right-20" data-dismiss="modal">@StringResources.SpecialOffers_Decline</button>
                    <input type="submit" value="@StringResources.SpecialOffers_Accept" class="btn btn-primary btn-ok button-width-large" />
                }
            </div>
        </div>

    </div>
</div>
<!-- End of Modal Offer C -->
